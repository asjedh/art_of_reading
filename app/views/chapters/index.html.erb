<h3>Your Notes for "<%= @book.title %>"</h3>
Book Details:</br>
Authors: <% @book.authors.each do |author| %>
  <%= author.name %>
<% end %>
<ul>
  <% @chapters.each do |chapter| %>
    <li><%= chapter.title %></li>
  <% end %>
</ul>



<h5>Add a Chapter for <%= @book.title %></h5>

<%= simple_form_for [@book, @chapter] do |f| %>
  <div class="form-inputs">
    <%= f.input :title, required: true, autofocus: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Add Chapter" %>
  </div>
<% end %>

