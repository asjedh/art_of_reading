<h2>Add a Book</h2>

<%= simple_form_for [@user, @book] do |f| %>
  <div class="form-inputs">
    <%= f.input :title, required: true, autofocus: true %>
    <%= f.simple_fields_for :authors do |authors_form| %>
      <%= authors_form.input :name, label: "Author" %>
    <% end %>
    <%= f.input :orig_pub_year, required: false, label: "Original Publication Year" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Add Book" %>
  </div>
<% end %>
